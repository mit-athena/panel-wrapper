# $Id: Makefile.in,v 1.2 2001-03-28 01:39:57 ghudson Exp $

SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@

CC=@CC@
DEFS=@DEFS@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=`gnome-config --libs gnomeui`
ALL_CFLAGS=`gnome-config --cflags gnomeui` ${CPPFLAGS} ${CFLAGS} ${DEFS}

all: panel-wrapper

panel-wrapper: panel-wrapper.o
	${CC} ${LDFLAGS} -o $@ panel-wrapper.o ${LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${bindir}
	${INSTALL_PROGRAM} panel-wrapper ${DESTDIR}${bindir}

clean:
	rm -f panel-wrapper.o panel-wrapper

distclean: clean
	rm -f config.cache config.log config.status Makefile
