# $Id: Makefile.in,v 1.3 2001-04-13 22:12:28 ghudson Exp $

SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@

CC=@CC@
DEFS=@DEFS@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
ALL_CFLAGS=`gnome-config --cflags gnomeui` ${CPPFLAGS} ${CFLAGS} ${DEFS}
ALL_LIBS=`gnome-config --libs gnomeui` ${LIBS}

all: panel-wrapper

panel-wrapper: panel-wrapper.o
	${CC} ${LDFLAGS} -o $@ panel-wrapper.o ${LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${bindir}
	${INSTALL_PROGRAM} panel-wrapper ${DESTDIR}${bindir}

clean:
	rm -f panel-wrapper.o panel-wrapper

distclean: clean
	rm -f config.cache config.log config.status Makefile
